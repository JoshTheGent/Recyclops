
@using Recyclops.Web.Models.Common.Modals
@using Recyclops
@using Recyclops.Web.Models.Common.Modals
@model Recyclops.Web.Models.Plastic.PlasticViewModel

@{
    Layout = null;
}


@HtmlHelperPartialExtensions.Partial(Html, "~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.Id == 0 ? "Add Plastic" : "Edit Plastic"))
<div class="modal-body">
    <form id="plasticForm" name="createForm" role="form" class="form-validation">
        <input asp-for="Id" type="hidden" />

        <div class="row clearfix" style="margin-top:10px;">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label asp-for="Name">Name</label>
                        <input type="text" asp-for="Name" required class="validate form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix" style="margin-top:10px;">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label asp-for="Mass">Density</label>
                        <input type="text" asp-for="Mass" required class="validate form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix" style="margin-top:10px;">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label asp-for="MeltingTemp">Melting Temperature</label>
                        <input type="text" asp-for="MeltingTemp" required class="validate form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix" style="margin-top:10px;">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label asp-for="HeatedBed">Heated Bed</label>
                        <select id="states" type="text" asp-for="HeatedBed" required class="validate form-control">
                            <option value="">--Select one--</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix" style="margin-top:10px;">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label asp-for="LocationSourceId">Location</label>
                        <select id="LocationList" type="text" asp-for="LocationSourceId" asp-items="Model.LocationList" required class="validate form-control">
                            <option value="">--Select one--</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<environment names="Development">
    <script src="~/view-resources/Views/Plastic/_Modal.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/view-resources/Views/Plastic/_Modal.min.js" asp-append-version="true"></script>
</environment>